@{
    ViewBag.Title = "Edit Draft";
    var isCourseAdmin = "false";
    var isTeacherCertAdmin = "false";
    var isCareerTechAdmin = "false";
    if (User.Identity.HasRoleClaim("TeacherCertAdmin"))
    {
        isTeacherCertAdmin = "true";
    };
    if (@User.Identity.HasRoleClaim("CareerTechAdmin"))
    {
        isCareerTechAdmin = "true";
    };
    if (User.Identity.HasRoleClaim("CourseAdmin") || @User.Identity.HasRoleClaim("Admin"))
    {
        isCourseAdmin = "true";
    };
}

<draft-edit course-id="@Model"></draft-edit>

@section scripts{
    <script src="~/src/app/drafts/draft-edit.component.js"></script>

    <script src="~/src/app/drafts/draft-detail-edit.component.js"></script>
    <script src="~/src/app/drafts/draft-requirement-edit.js"></script>
    <script src="~/src/app/drafts/draft-careertech-edit.js"></script>
}
