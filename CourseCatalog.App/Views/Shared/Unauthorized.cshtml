@{
    ViewBag.Title = "Unauthorized";
}

<div class="card">
    <div class="card-header">
        <span class="font-weight-bolder">
            Access Denied
        </span>
    </div>
    <div class="card-body">

        <div class="row">

            <div class="mx-auto">

                <h1>
                    You are not @if (User.Identity.IsAuthenticated)
                    {
                        <text>authorized</text>
                    }
                    else
                    {
                        <text>logged in</text>
                    }
                    and unable to view this page.
                </h1>

                <p>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <text>
                            <a href='/account/signout'>Logout</a> and return with an authorized user account.
                        </text>
                    }

                    @if (!User.Identity.IsAuthenticated)
                    {
                        <text>
                            <a href='@Constants.LoginUrl'>Login</a> with an authorized user account and return.
                        </text>
                    }

                </p>
            </div>

        </div>

    </div>

</div>

